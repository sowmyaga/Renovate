{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>renovatebot/.github"
  ],
  "assignees": [
    "sowmyaga"
  ],
  "semanticCommitScope": "deps",
  "automergeType": "pr",
  "dockerfile": {
    "semanticCommitType": "build"
  },
"timezone": "Asia/Kolkata",
  "rangeStrategy": "bump",
  "prHourlyLimit": 20,
  "prConcurrentLimit": 20,
  "baseBranches": ["main"], 
  "commitMessagePrefix": "",
  "commitMessageTopic": "{{packageName}} v{{currentVersion}}",
  "prCreation": "immediate",
  "reviewers": [ "sowmyaga"],
    "packageRules": [
        {
            "description": "This configuration will group all minor updates and patches in a single MR. This MR will be auto-merged by Renovate Chimera Bot and do not need approval or validation by the selected reviewers.",
            "automerge": false,
            "automergeType": "branch",
            "automergeStrategy": "auto",
            "depTypes": ["dependencies", "devDependencies"],
            "matchUpdateTypes": ["minor", "patch"],
            "matchPackageNames": ["/*/"],
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch",
            "updateInternalDeps": true
                      
          },
        
          {
            "description": "This configuration will ensure certain crucial packages are never auto-merged, even for minor or patch updates.",
            "automerge": false,
            "depTypes": ["dependencies", "devDependencies"],
            "matchPackageNames": [
              "@reduxjs/toolkit", 
              "typescript",
              "babel-loader"
            ],
            "groupName": "critical packages",
            "groupSlug": "critical-packages"
          }

    ]
  }
  
